<img src="https://www.soshcr.fr/img/header.png"  style="width:105%;">

<h3 style="text-align: center">Candidats répondants à vos critères de recherche :</h3>
<br><br>



<div style="
margin-left: 250px;
color: #888;
" class="col-sm-8">

	{% for employe in data.employes %}
		<div style="width: 50%;display: table;position: relative;
min-height: 1px;
padding-right: 15px;
padding-left: 15px;" class="container col-sm-6">
			<div style="margin-bottom: 20px;
background-color: #fff;
border: 1px solid transparent;
border-radius: 4px;
-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
box-shadow: 0 1px 1px rgba(0, 0, 0, .05);" class="panel result-panel">
				<div style="padding: 10px 15px;
border-bottom: 1px solid transparent;
border-top-left-radius: 3px;
border-top-right-radius: 3px;background-color: #394076;
color: #fff;" class="panel-heading result-panel-heading">
					{{ employe.prenom ~ ' ' ~ employe.nom ~ ' (' ~ employe.age ~' ans)'}}
				</div>
				<div style="padding: 15px;" class="panel-body">
					<p>{{ employe.email }}</p>
					<p>{{ employe.telephone }}</p>
					{% if employe.nbRecommandation == 0 %}
						<p>0 recommandation</p>
					{% elseif employe.nbRecommandation  > 1 %}
						<p>{{ employe.nbRecommandation  }} recommandations</p>
					{% elseif employe.nbRecommandation  == 1 %}
						<p>{{ employe.nbRecommandation  }} recommandation</p>
					{% endif %}
				</div>

			</div>
		</div>
	{% endfor %}




</div>








